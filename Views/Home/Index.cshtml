@{
    ViewData["Title"] = "Home Page";
}

<h4 class="mt-3">Propostas que gerencio</h4>

@if (ViewBag.ProposalsIManage != null)
{
    @foreach (Proposal proposal in ViewBag.ProposalsIManage)
    {
        <div class="card feed-item mt-3">
            <div class="card-body">
                <!-- Checar se já favoritou, se sim estrela preenchida, se não estrela vazia -->

                @{
                    bool Favorited = false;
                }

                @foreach (Proposal proposalsIFavorited in ViewBag.ProposalsIFavorited)
                {
                    if (proposal.Id == proposalsIFavorited.Id)
                    {
                        Favorited = true;
                    }
                }

                @if (Favorited)
                {
                    <a asp-controller="Home" asp-action="Favorite" asp-route-proposalId="@proposal.Id"><i
                class="fa-solid fa-star fa-lg"></i></a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Favorite" asp-route-proposalId="@proposal.Id"><i
                class="fa-regular fa-star fa-lg"></i>
                    </a>
                }

                <!-- Checar se já favoritou, se sim estrela preenchida, se não estrela vazia -->

        <h5 class="card-title">@proposal.Title</h5>
                @{
                    var categoriesFormated = ((IEnumerable<dynamic>)ViewBag.Categories).Where(x => proposal.Categories.Any(y =>
                            Int32.Parse(x.Value) == y.Id));
                }

                @foreach (var item in categoriesFormated)
                {
                    <h6 class="card-subtitle mb-2 text-muted">@item.Text</h6>
                }
                <p class="card-text">@proposal.Description</p>
                <div style="display: flex;">
                    <h6 class="card-link mr-2">@proposal.Votes</h6>
                    @{
                        bool liked = false;
                    }

                    @foreach (AppUserProposalVote proposalsILiked in ViewBag.ProposalsILiked)
                    {
                        if (proposal.Id == proposalsILiked.ProposalId)
                        {
                            liked = true;
                        }
                    }

                    @if (liked)
                    {
                        <a asp-controller="Home" asp-action="Vote" asp-route-proposalId="@proposal.Id"><i
                    class="fa-solid fa-thumbs-up fa-lg"></i></a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Vote" asp-route-proposalId="@proposal.Id"><i
                    class="fa-regular fa-thumbs-up fa-lg"></i></a>
                    }
                    @{
                        string modalName = "commentModal" + @proposal.Id;
                    }
                    <button data-toggle="modal" data-target="#@modalName" type="button" class="btn btn-primary">
                        Comentar
                    </button>
                </div>
            </div>
        </div>
        <div class="modal fade" id="@modalName" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- -------------------Login----------------- -->
                <form asp-controller="Home" asp-action="Comment" class="mb-3">
                            <div class="form-group">
                                <label for="comment">Comentar</label>
                                <textarea class="form-control" id="comment" name="comment"></textarea>
                                <input name="proposalId" value="@proposal.Id" hidden>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                        @foreach (Comment comment in proposal.Comments)
                        {
                            <div>
                                <h6>@comment.AppUserNickname</h6>
                                <p>@comment.CommentDate</p>
                                <p>@comment.CommentText</p>
                                <div style="display: flex;">
                                    <p class="mr-2">@comment.Votes</p>

                                    @{
                                        bool likedComment = false;
                                    }

                                    @foreach (AppUserCommentVote commentsILiked in ViewBag.CommentsILiked)
                                    {
                                        if (comment.Id == commentsILiked.CommentId)
                                        {
                                            likedComment = true;
                                        }
                                    }

                                    @if (likedComment)
                                    {
                                        <a asp-controller="Home" asp-action="VoteComment" asp-route-commentId="@comment.Id"><i
                                class="fa-solid fa-thumbs-up fa-lg"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Home" asp-action="VoteComment" asp-route-commentId="@comment.Id"><i
                                class="fa-regular fa-thumbs-up fa-lg"></i></a>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

